pipeline {
    agent any

    stages {
        stage('Cleanup and Checkout') {
            steps {
                // This cleans the workspace of any old root files
                cleanWs()
                checkout scm
                sh 'echo "Code checked out successfully."'
            }
        }
        stage('Build and Test') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    // We run Maven inside a container
                    sh 'docker run --rm -v ${WORKSPACE}:/app -w /app/java-maven-sonar-argocd-helm-k8s/spring-boot-app maven:3.9.6-eclipse-temurin-17 mvn clean package'
                    
                    // CRITICAL: Change ownership of created files back to jenkins user immediately
                    sh 'sudo chown -R jenkins:jenkins ${WORKSPACE}'
                }
            }
        }
        stage('Static Code Analysis') {
            environment {
                SONAR_URL = "http://43.205.243.142:9000" 
            }
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
                        sh 'docker run --rm -v ${WORKSPACE}:/app -w /app/java-maven-sonar-argocd-helm-k8s/spring-boot-app maven:3.9.6-eclipse-temurin-17 mvn org.sonarsource.scanner.maven:sonar-maven-plugin:3.7.0.1746:sonar -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.host.url=${SONAR_URL}'
                        sh 'sudo chown -R jenkins:jenkins ${WORKSPACE}'
                    }
                }
            }
        }
        stage('Build and Push Docker Image') {
            environment {
                DOCKER_IMAGE = "adrainbialon/my-spring-app:${BUILD_NUMBER}"
            }
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    script {
                        sh 'docker build -t ${DOCKER_IMAGE} .'
                        docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
                            sh "docker push ${DOCKER_IMAGE}"
                        }
                    }
                }
            }
        }
        stage('Update Deployment File') {
            environment {
                GIT_REPO_NAME = "Jenkins-Project-CICD"
                GIT_USER_NAME = "Muhammad-Zubair796" 
            }
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests') {
                    withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                        sh '''
                            git config user.email "adrainbialon@gmail.com"
                            git config user.name "Muhammad-Zubair796"
                            sed -i "s|image: adrainbialon/my-spring-app:.*|image: adrainbialon/my-spring-app:${BUILD_NUMBER}|g" deployment.yml
                            git add deployment.yml
                            git commit -m "Update deployment image to version ${BUILD_NUMBER}" || echo "No changes"
                            git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git HEAD:main
                        '''
                    }
                }
            }
        }
    }
}
